    "version": "0.3.0",
        "configurations": [
        {
            "name": "Curso Arquitectura",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Empresa.Ecommerce.Services.WebApi/bin/Debug/net6.0/Empresa.Ecommerce.Services.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Empresa.Ecommerce.Services.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s /swagger",
                "browser": "msedge"               
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
